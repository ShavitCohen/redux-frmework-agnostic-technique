{
  "name": "redux-middleware-technique",
  "private": true,
  "scripts": {
    "init": "yarn",
    "start": "echo 'try: yarn run react'",
    "react": "cross-env PORT=4444 yarn workspace @implementations/react start",
    "vue": "cross-env PORT=5555 yarn workspace @implementations/vue start",
    "slimjs": "cross-env PORT=9000 yarn workspace slimjs-client-boilerplate start",
    "angular": "cross-env PORT=4200 yarn workspace angular start",
    "build:react": "yarn --cwd ./implementations/react build",
    "build:vue": "yarn --cwd ./implementations/vue build",
    "build:slimjs": "yarn --cwd ./implementations/slimjs build",
    "build:angular": "yarn --cwd ./implementations/angular build"
  },
  "devDependencies": {
    "webpack-cli": "^3.3.0"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "workspaces": [
    "redux-logic-layer",
    "implementations/*"
  ],
  "dependencies": {
    "cross-env": "*",
    "cwd": "^0.10.0",
    "redux-logic-layer": "file:redux-logic-layer"
  }
